<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/check_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_circle_outline_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_imageview"
        app:layout_constraintLeft_toRightOf="@+id/logo_imageview"
        app:layout_constraintTop_toTopOf="@+id/logo_imageview" />

    <TextView
        android:id="@+id/currency_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_imageview"
        app:layout_constraintTop_toBottomOf="@+id/name_textview"
        app:layout_constraintLeft_toRightOf="@+id/logo_imageview"/>

    <TextView
        android:id="@+id/price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 56.765"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/currency_textview"
        app:layout_constraintTop_toTopOf="@id/currency_textview"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>